{
  "name": "@segmentify/react-native-sdk",
  "version": "0.1.1",
  "description": "Introducing the cutting-edge React Native app designed to revolutionize personalization and segmentation for e-commerce businesses. Our app harnesses the power of React Native, a powerful and widely adopted framework, to deliver a seamless cross-platform experience for both iOS and Android users.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install",
    "docs": "jsdoc -c jsdoc.json && open -a \"Google Chrome\" docs/index.html"
  },
  "keywords": [
    "react-native",
    "segmentify",
    "ecommerce",
    "personalization",
    "segmentation",
    "push",
    "notification",
    "analytics",
    "ab",
    "search",
    "recommendation",
    "ios",
    "android"
  ],
  "repository": "https://github.com/segmentify/react-native-sdk",
  "author": "segmentify <dev@segmentify.com> (https://github.com/segmentify/react-native-sdk)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/segmentify/react-native-sdk/issues"
  },
  "homepage": "https://github.com/segmentify/react-native-sdk#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "yarn@1.22.15",
  "engines": {
    "node": ">= 16.0.0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.2.2",
    "@notifee/react-native": "^7.8.0",
    "@react-native-community/eslint-config": "^3.0.2",
    "@react-native-firebase/app": "^18.2.0",
    "@react-native-firebase/messaging": "^18.2.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.70.0",
    "@types/react-native-push-notification": "^8.1.1",
    "better-docs": "^2.7.2",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "jsdoc": "^4.0.2",
    "mock-async-storage": "^2.2.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.71.8",
    "react-native-builder-bob": "^0.20.0",
    "react-native-dotenv": "^3.4.9",
    "release-it": "^15.0.0",
    "taffydb": "^2.7.3",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "examplenativeapp/",
    "docs/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example",
      "<rootDir>/example/node_modules",
      "<rootDir>/exampleandroidapp",
      "<rootDir>/exampleandroidapp/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/src/__tests__/__mocks__/*",
      "<rootDir>/docs/*"
    ],
    "setupFiles": [
      "<rootDir>/setup-jest.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "yarn lint",
        "yarn test"
      ],
      "after:bump": [
        "yarn docs",
        "npx auto-changelog -p"
      ]
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "./src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
